package array;
import java.util.Scanner;
class Prac2_Array_2D {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int[] row1 = new int[5];
		int[] column = new int[5];
		int sum, totalSum;
		
		Scanner input = new Scanner (System.in);
		
	    System.out.println("Enter five numbers for row : ");
	    for(int i=0; i<row1.length; i++)
	    	row1[i] = input.nextInt();
	    
	    System.out.println("\n");
	    
	    
	    for(int i=0; i<row1.length; i++)
		    System.out.println("The numbers in row 0 index " + i + " is " + row1[i]);
	    
	    System.out.println("\n");
	    
	    System.out.println("Enter five numbers for column : ");
	    for(int i=0; i<column.length; i++)
	    	column[i] = input.nextInt();
	    
	    System.out.println("\n");
	    
	    for(int i=0; i<column.length; i++)
		    System.out.println("The numbers in column 0 index " + i + " is " + column[i]);
	  
	}

}
